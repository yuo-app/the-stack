{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "the-stack",
  "version": "0.1.0",
  "identifier": "com.stack.dev",
  
  "build": {
    "frontendDist": "../.output/public",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "bun run dev",
    "beforeBuildCommand": "bun run build"
  },
  "app": {
    "windows": [
      {
        "title": "the-stack",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false,
        "useHttpsScheme": true
      }
    ],
    "security": {
      "csp": "default-src 'self' blob: data:; script-src 'self'; worker-src 'self' blob:; object-src 'none'; connect-src 'self' ipc.localhost https://the-stack.hegyi-aron101.workers.dev"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "deep-link": {
      "customProtocol": "the-stack",
      "schemes": [
        "the-stack"
      ]
    }
  }
}
